<div class='well'>
  <%= form_for @post do |f| %>

    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8 %>
    </div>
    <%= f.submit @post.new_record? ? "Create Post" : "Update", class: 'btn btn-success' %>
  <% end %>
</div>